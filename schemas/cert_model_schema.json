{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["$schema", "kind", "name", "long_name"],
  "properties": {
    "$schema": {
      "type": "string",
      "const": "cert_model_schema.json#"
    },
    "$child_of": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(profile|certificate_model)/.*\\.yaml#.*"
        },
        {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^(profile|certificate_model)/.*\\.yaml#.*"
          }
        }
      ]
    },
    "$inherits": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(profile|certificate_model)/.*\\.yaml#.*"
        },
        {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^(profile|certificate_model)/.*\\.yaml#.*"
          }
        }
      ]
    },
    "$parent_of": {
      "oneOf": [
        {
          "type": "string",
          "pattern": "^(profile|certificate_model)/.*\\.yaml#.*"
        },
        {
          "type": "array",
          "uniqueItems": true,
          "items": {
            "type": "string",
            "pattern": "^(profile|certificate_model)/.*\\.yaml#.*"
          }
        }
      ]
    },
    "$source": {
      "$ref": "schema_defs.json#/$defs/$source"
    },
    "base": {
      "description": "Base of the model",
      "type": "integer",
      "enum": [32, 64]
    },
    "class": {
      "description": "Reference to the class this model belongs to",
      "type": "object",
      "properties": {
        "$ref": {
          "type": "string",
          "pattern": "^certificate_class/[A-Z][a-zA-Z0-9_]*\\.yaml#"
        }
      }
    },
    "debug_manual_revision": {
      "type": "string"
    },
    "extensions": {
      "type": "object",
      "patternProperties": {
        "\\$child_of": {
          "oneOf": [
            {
              "type": "string",
              "pattern": "^(profile|certificate_model)/.*\\.yaml#.*"
            },
            {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string",
                "pattern": "^(profile|certificate_model)/.*\\.yaml#.*"
              }
            }
          ]
        },
        "\\$inherits": {
          "oneOf": [
            {
              "type": "string",
              "pattern": "^(profile|certificate_model)/.*\\.yaml#.*"
            },
            {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string",
                "pattern": "^(profile|certificate_model)/.*\\.yaml#.*"
              }
            }
          ]
        },
        "^([A-WY])|([SXZ][a-z0-9]+)$": {
          "type": "object",
          "properties": {
            "note": {
              "type": "string"
            },
            "parameters": {
              "type": "object",
              "patternProperties": {
                "^[A-Z][A-Z0-9_]+$": {
                  "$ref": "schema_defs.json#/$defs/parameter_constraint"
                }
              }
            },
            "presence": {
              "$ref": "schema_defs.json#/$defs/extension_presence"
            },
            "version": {
              "$ref": "schema_defs.json#/$defs/requirement_string"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "extra_notes": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "presence": {
            "$ref": "schema_defs.json#/$defs/extension_presence"
          },
          "text": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "introduction": {
      "description": "Asciidoc text containing the introduction prose for the model",
      "type": "string"
    },
    "kind": {
      "type": "string",
      "const": "certificate model"
    },
    "long_name": {
      "description": "Descriptive name of the class",
      "type": "string"
    },
    "name": {
      "description": "The short name of the model, used as a database key",
      "type": "string",
      "pattern": "^[A-Z][a-zA-Z0-9_-]*$"
    },
    "priv_isa_manual_revision": {
      "type": "string"
    },
    "recommendations": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "text": {
            "type": "string"
          }
        }
      }
    },
    "requirement_groups": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "requirements": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "description": {
                  "type": "string"
                },
                "name": {
                  "type": "string"
                },
                "when": {
                  "$ref": "schema_defs.json#/$defs/when_condition"
                }
              },
              "additionalProperties": false
            }
          }
        }
      }
    },
    "revision_history": {
      "description": "Revisions of the model document",
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "schema_defs.json#/$defs/revision_history_entry"
      }
    },
    "tsc_profile": {
      "description": "Profile certified by this model",
      "oneOf": [
        {
          "type": "null"
        },
        {
          "type": "object",
          "required": ["$ref"],
          "properties": {
            "$ref": {
              "type": "string",
              "pattern": "^profile_release|certificate_model/[A-Z][a-zA-Z0-9_]*\\.yaml#"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "unpriv_isa_manual_revision": {
      "type": "string"
    },
    "versions": {
      "description": "List of semantic versions within the model",
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["version"],
        "properties": {
          "version": {
            "$ref": "schema_defs.json#/$defs/semantic_version"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
